@{
    ViewBag.Title = "Водители";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


@model IEnumerable<MovingCars.Models.Driver>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <button type="button" class="btn btn-default btn-md" data-toggle="modal" data-url="@Url.Action("Create","Driver")" id="btnCreateAsset">
                    <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> Добавить
                </button>
            </div>
            <div class="panel-body">
                <table id="drivers-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Позывной</th>
                            <th>Телефон</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var driver in Model)
                        {
                            <tr>
                                <td>@driver.Id</td>
                                <td>@driver.LastName</td>
                                <td>@driver.FirstName</td>
                                <td>@driver.Patronymic</td>
                                <td>@driver.Call</td>
                                <td>@driver.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#drivers-data-table').DataTable();
        });
    </script>
}